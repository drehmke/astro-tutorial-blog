---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  imagePath: string;
  altText: string;
}

const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/flamingos/*.{jpeg,jpg,png,gif}')
console.log(images)
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "/src/assets/images/flamingos/*.{jpeg,jpg,png,gif}".`)
---

<div class="imgCard">
  <Image src={images[imagePath]()} alt={altText} />
</div>